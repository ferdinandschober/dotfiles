[dims]
small = 2
medium = 4
big = 8

[colors]
MAGENTA1=#e91e63

background = ${xrdb:background}
background-alt = ${xrdb:color4}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color5}
primary = ${xrdb:color12}
secondary = ${xrdb:14}
alert = ${xrdb:color9}

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 25
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = ${colors.foreground}

border-size = 0
border-color = ${colors.background}

padding-left = 0
padding-right = ${dims.medium}

module-margin-left = 0
module-margin-right = 0

font-0 = Wuncon Siji:pixelsize=8:antialias=false;0
font-1 = Siji:pixelsize=8:antialias=false;0
font-2 = creep regular:size=8:antialias=false;1

modules-left = arch i3 bspwm xwindow
modules-right = pulseaudio xkeyboard wlan battery date

tray-position = center
tray-padding = ${dims.medium}
tray-background = ${colors.background}

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-prefix = "  |  "

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format = <label-layout>
format-margin = ${dims.small}

format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-margin = ${dims.small}

label-layout = %layout%
label-indicator = %name%
label-indicator-padding = ${dims.small}

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction 
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = true

format = <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 0

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = ${dims.small}

label-unfocused = %index%
label-unfocused-padding = ${dims.small}

label-occupied = %name%
label-occupied-padding = ${dims.small}

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = ${dims.small}

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = ${dims.small}

label-visible-padding = ${dims.small}

[module/bspwm]
type = internal/bspwm
format = <label-mode>  <label-state>

